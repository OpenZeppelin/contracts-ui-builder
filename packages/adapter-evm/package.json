{
  "name": "@openzeppelin/contracts-ui-builder-adapter-evm",
  "version": "0.8.0",
  "private": false,
  "description": "EVM Adapter for Contracts UI Builder",
  "keywords": [
    "openzeppelin",
    "transaction",
    "form",
    "builder",
    "adapter",
    "evm",
    "ethereum",
    "wagmi"
  ],
  "author": "Aleksandr Pasevin <aleksandr.pasevin@openzeppelin.com>",
  "homepage": "https://github.com/OpenZeppelin/contracts-ui-builder#readme",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/contracts-ui-builder.git",
    "directory": "packages/adapter-evm"
  },
  "bugs": {
    "url": "https://github.com/OpenZeppelin/contracts-ui-builder/issues"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:adapters": "node ../../lint-adapters.cjs",
    "prepublishOnly": "[ \"$SKIP_PUBLISH_BUILD\" = \"true\" ] || pnpm build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@openzeppelin/contracts-ui-builder-react-core": "workspace:^",
    "@openzeppelin/contracts-ui-builder-types": "workspace:^",
    "@openzeppelin/contracts-ui-builder-ui": "workspace:^",
    "@openzeppelin/contracts-ui-builder-utils": "workspace:^",
    "@openzeppelin/relayer-sdk": "1.1.0",
    "@wagmi/connectors": "5.7.13",
    "@wagmi/core": "^2.20.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.510.0",
    "react-hook-form": "^7.62.0"
  },
  "devDependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.84.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/lodash": "^4.17.20",
    "eslint": "^9.32.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "viem": "^2.33.3",
    "vitest": "^3.2.4",
    "wagmi": "^2.16.1"
  },
  "peerDependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.74.7",
    "react": "^19.0.0",
    "viem": "^2.28.0",
    "wagmi": "^2.15.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/config.js": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js",
      "require": "./dist/config.cjs"
    }
  }
}
